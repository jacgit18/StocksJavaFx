<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="apStock" prefHeight="594.0" prefWidth="624.0" styleClass="apStock2" stylesheets="@Stockviewlooks.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.red.stocks.fxml.StockController">
	<children>
		<TableView fx:id="tvStock" layoutX="24.0" layoutY="105.0" prefHeight="439.0" prefWidth="573.0">
			<columns>
				<TableColumn fx:id="colSymbol" prefWidth="105.0" text="stock symbol">

					<cellValueFactory>
						<PropertyValueFactory property="symbol" />
					</cellValueFactory>

				</TableColumn>
				<TableColumn fx:id="colName" prefWidth="237.0" text="stock name">
					<cellValueFactory>
						<PropertyValueFactory property="name" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="colPrice" prefWidth="127.0" text="current price">
					<cellValueFactory>
						<PropertyValueFactory property="price" />
					</cellValueFactory>
				</TableColumn>
            <TableColumn fx:id="colCategory" prefWidth="105.0" text="category">
               <cellValueFactory>
                  <PropertyValueFactory property="category" />
               </cellValueFactory>
            </TableColumn>
			</columns>
		</TableView>
		<Label fx:id="lblTitle" layoutX="232.0" layoutY="6.0" prefHeight="17.0" prefWidth="155.0" styleClass="name" text="Advanced Stock Search" />
      <Label layoutX="14.0" layoutY="49.0" styleClass="name" text="Price" />
      <TextField fx:id="txtField" layoutX="62.0" layoutY="45.0" onKeyReleased="#onKeyReleased" prefHeight="26.0" prefWidth="122.0" />
      <Button fx:id="btnSearch" disable="true" layoutX="192.0" layoutY="45.0" mnemonicParsing="false" onAction="#search" styleClass="name" text="Search" />
      <Label fx:id="lblMessage" layoutX="24.0" layoutY="556.0" prefHeight="17.0" prefWidth="434.0" />
      <Label layoutX="24.0" layoutY="80.0" prefHeight="17.0" prefWidth="434.0" styleClass="name" text="Enter in All to display all rows" />
      <RadioButton fx:id="rbSimple" layoutX="458.0" layoutY="37.0" mnemonicParsing="false" onAction="#searchMode" styleClass="name" text="simple search">
         <toggleGroup>
            <ToggleGroup fx:id="tgSearchMode" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="rbAdvanced" layoutX="458.0" layoutY="72.0" mnemonicParsing="false" onAction="#searchMode" selected="true" styleClass="name" text="advanced search" toggleGroup="$tgSearchMode" />
      <ComboBox fx:id="cbCategroy" layoutX="341.0" layoutY="45.0" prefHeight="25.0" prefWidth="93.0" />
      <Label fx:id="cbCategory" layoutX="267.0" layoutY="50.0" styleClass="name" text="Category" />
	</children>
</AnchorPane>
