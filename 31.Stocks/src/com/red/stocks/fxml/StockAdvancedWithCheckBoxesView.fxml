						<PropertyValueFactory property="symbol" />
					</cellValueFactory>

				</TableColumn>
				<TableColumn fx:id="colPrice" prefWidth="124.0" text="Current Price">
					<cellValueFactory>
						<PropertyValueFactory property="price" />
					</cellValueFactory>
				</TableColumn>
            <TableColumn fx:id="colCategory" prefWidth="74.0" text="Category">
               <cellValueFactory>
                  <PropertyValueFactory property="category" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colNet" prefWidth="105.0" text="Net Income">
               <cellValueFactory>
                  <PropertyValueFactory property="category" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colDividend" prefWidth="127.0" text="Dividend Yeild">
               <cellValueFactory>
                  <PropertyValueFactory property="category" />
