<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="apStock" prefHeight="594.0" prefWidth="624.0" styleClass="apStock1" stylesheets="@Stockviewlooks.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.red.stocks.fxml.StockController">
	<children>
		<TableView fx:id="tvStock" layoutX="28.0" layoutY="109.0" prefHeight="439.0" prefWidth="576.0">
			<columns>
				<TableColumn fx:id="colSymbol" prefWidth="157.0" text="stock symbol">

					<cellValueFactory>
						<PropertyValueFactory property="symbol" />
					</cellValueFactory>

				</TableColumn>
				<TableColumn fx:id="colName" prefWidth="278.0" text="stock name">
					<cellValueFactory>
						<PropertyValueFactory property="name" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn fx:id="colPrice" prefWidth="157.0" text="current price">
					<cellValueFactory>
						<PropertyValueFactory property="price" />
					</cellValueFactory>
				</TableColumn>
			</columns>
		</TableView>
		<Label fx:id="lblTitle" layoutX="223.0" layoutY="6.0" styleClass="name" text="Stocks" />
      <Label layoutX="24.0" layoutY="49.0" styleClass="name" text="Sybmbol:" />
      <TextField fx:id="txtField" layoutX="92.0" layoutY="45.0" onKeyReleased="#onKeyReleased" prefHeight="26.0" prefWidth="115.0" />
      <Button fx:id="btnSearch" disable="true" layoutX="223.0" layoutY="48.0" mnemonicParsing="false" onAction="#search" styleClass="name" text="Search" />
      <Label fx:id="lblMessage" layoutX="24.0" layoutY="556.0" prefHeight="17.0" prefWidth="434.0" />
      <Label layoutX="24.0" layoutY="80.0" prefHeight="17.0" prefWidth="434.0" styleClass="name" text="Enter in All to display all rows" />
      <RadioButton fx:id="rbSimple" layoutX="339.0" layoutY="37.0" mnemonicParsing="false" onAction="#searchMode" selected="true" styleClass="name" text="simple search">
         <toggleGroup>
            <ToggleGroup fx:id="tgSearchMode" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="rbAdvanced" layoutX="339.0" layoutY="61.0" mnemonicParsing="false" onAction="#searchMode" styleClass="name" text="advanced search" toggleGroup="$tgSearchMode" />
	</children>
</AnchorPane>
